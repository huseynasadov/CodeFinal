@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model LoginVM
@{
    ViewData["Title"] = _localizer["Login"];
}


@await Html.PartialAsync("~/Views/Shared/_Breadcrumb.cshtml", model: Model.Breadcrumb)
<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="account_form register">
                    <h2>@_localizer["Login"]</h2>
                    <form asp-controller="login" asp-action="index" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly"></div>

                        @_localizer["Email"]:  <input asp-for="Login.Email" /> <br />
                        <span class="text-danger" asp-validation-for="Login.Email"></span><br />


                        @_localizer["Password"]: <input asp-for="Login.Password" /><br />
                        <span class="text-danger" asp-validation-for="Login.Password"></span><br />
                        <button type="submit">@_localizer["Login"]</button>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>