@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model LoginVM
@{
    ViewData["Title"] = _localizer["Login"];
}


@await Html.PartialAsync("~/Views/Shared/_Breadcrumb.cshtml", model: Model.Breadcrumb)
<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="account_form register">
                    <h2>@_localizer["Login"]</h2>
                    <form asp-controller="login" asp-action="index" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            @_localizer["Email"]:  <input asp-for="Login.Email" class="form-control" data-validation="required email" />
                            <span class="text-danger" asp-validation-for="Login.Email"></span>
                        </div>
                        <div class="form-group">
                            @_localizer["Password"]: <input asp-for="Login.Password" class="form-control" data-validation="required" />
                            <span class="text-danger" asp-validation-for="Login.Password"></span>
                        </div>

                        <button type="submit">@_localizer["Login"]</button>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery-form-validator/jquery.form-validator.min.js"></script>
    <script>
        $.validate();
    </script>
}