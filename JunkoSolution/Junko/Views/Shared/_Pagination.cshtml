@model Pagination
<div class="row">
    <div class="col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination job-pagination justify-content-center">
                @if (Model.CurrentPage != 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("index", $"{Model.Page}", new { page = (Model.CurrentPage-1),category=(Model.CategoryId !=null? Model.CategoryId:null ), search=Model.Search})" tabindex="-1" aria-disabled="true">&lt; &lt;</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (Model.CurrentPage == i)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("index", $"{Model.Page}", new { page = i,brand=Model.BrandId!=null?Model.BrandId:null, category=(Model.CategoryId !=null? Model.CategoryId:null ),search=Model.Search})">@i</a></li>
                    }
                }
                @if (Model.CurrentPage != (Model.PageCount) && Model.PageCount != 0)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("index", $"{Model.Page}", new { page = (Model.CurrentPage+1),category=(Model.CategoryId !=null? Model.CategoryId:null ),search=Model.Search})">
                            >>
                        </a>
                    </li>
                }

            </ul>
        </nav>
    </div>
</div>