@using Microsoft.AspNetCore.Identity
@using Junko.Models

@inject SignInManager<AppAdmin> SignInManager
@inject UserManager<AppAdmin> UserManager
@{

    //AdminManager admin = ViewBag.admin as AdminManager;

  
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Junko - Admin</title>

    <!-- Custom fonts for this template-->
    <link href="~/bootstrap-formhelpers/font-awesome/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    @RenderSection("head", false)
    <!-- Custom styles for this template-->
    <link href="~/Admin/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/bootstrap-formhelpers/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/SeewAlert/sweetalert2.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link rel="stylesheet" href="~/Admin/vendor/Sortable/jquery-ui.min.css">
    <link rel="stylesheet" href="~/Admin/vendor/Sortable/jquery-ui.structure.min.css">
    <link rel="stylesheet" href="~/Admin/vendor/Sortable/jquery-ui.theme.min.css">
    <link rel="stylesheet" href="~/vendor/spectrum/spectrum.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <link href="~/Admin/css/main.css" rel="stylesheet" />
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-action="index" asp-controller="dashboard" asp-area="control">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Junko-Admin</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-action="index" asp-controller="dashboard" asp-area="control">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Idarəetmə Paneli</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePage-1" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-tools"></i>
                    <span>Parametrlər</span>
                </a>
                <div id="collapsePage-1" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="settings" asp-action="index">Ümumi</a>
                        <a class="collapse-item" asp-action="index" asp-controller="HomeHeaders" asp-area="control">Ana səhifə</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePage" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-cart-arrow-down"></i>
                    <span>Məhsul</span>
                </a>
                <div id="collapsePage" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="Products" asp-action="index">Məhsullar</a>
                        <a class="collapse-item" asp-action="index" asp-controller="Properities" asp-area="control">Xüsusiyyətlər</a>
                        <a class="collapse-item" asp-action="index" asp-controller="ProperityProducts" asp-area="control">Məshul Xüsusiyyətləri </a>
                        <a class="collapse-item" asp-action="index" asp-controller="Brands" asp-area="control">Brendlər</a>
                        <a class="collapse-item" asp-action="index" asp-controller="BrandCategories" asp-area="control">Brend Kateqoriyalar</a>
                        <a class="collapse-item" asp-action="index" asp-controller="ProductPhotoes" asp-area="control">Məshul Şəkilləri</a>
                        <a class="collapse-item" asp-action="index" asp-controller="ProductSubCategories" asp-area="control">Məhsul Alt Kateqoriyaları</a>
                        <a class="collapse-item" asp-action="index" asp-controller="ProductCategories" asp-area="control">Kateqoriyalar</a>
                        <a class="collapse-item" asp-action="index" asp-controller="ProductColors" asp-area="control">Məhsullar üçün Rəng</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="Blogs" asp-area="control">
                    <i class="fab fa-blogger-b"></i>
                    <span>Xəbərlər</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="UserClients" asp-area="control">
                    <i class="fas fa-user-friends"></i>
                    <span>İstifadəçilər</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="OrderProducts" asp-area="control">
                    <i class="fab fa-paypal"></i>
                    <span>Sifarişlər</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="Colors" asp-area="control">
                    <i class="fab fa-paypal"></i>
                    <span>Rənglər</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-envelope-open-text"></i>
                    <span>Rəylər</span>
                </a>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="ProductReviews" asp-action="index">Məhsul</a>
                        <a class="collapse-item" asp-controller="BlogReviews" asp-action="index">Xəbər</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="users">
                    <i class="fas fa-user-lock"></i>
                    <span>Admin İdarəetmə</span>
                </a>
            </li>


            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>



                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - Alerts -->
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">

                            @await Component.InvokeAsync("ControlUser")
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    @RenderBody()

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span> @DateTime.Now</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">İdarəetmə Panelindən çıxış</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">İmtina</button>
                    <a class="btn btn-primary" asp-action="logout" asp-controller="users">Çıx</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-form-validator/jquery.form-validator.min.js"></script>
    <script src="~/lib/SeewAlert/sweetalert2.all.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Admin/vendor/Sortable/jquery-ui.min.js"></script>
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/vendor/spectrum/spectrum.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Admin/js/sb-admin-2.min.js"></script>
    <script src="~/Admin/js/main.js"></script>
    @RenderSection("scripts", false)

</body>

</html>
