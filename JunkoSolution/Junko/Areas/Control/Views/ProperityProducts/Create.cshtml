@model Junko.Models.ProperityProduct

@{
    ViewData["Title"] = "Seçim";
}

<partial name="_NotificationPartial" />
<h4>Məhsul üçün Xüsusiyyət seçimi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProperityId" class="control-label"></label>
                <select asp-for="ProperityId" class="form-control" asp-items="ViewBag.ProperityId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" data-validation="required"/>
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <input hidden name="CreatedAt" value="@DateTime.Now" />

            <div class="form-group">
                <input type="submit" value="Əlavə et" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            setTimeout(function () {
                $(".zmdi-notifications").fadeOut("slow");
            }, 2500)
        });
        $.validate();
    </script>
}
