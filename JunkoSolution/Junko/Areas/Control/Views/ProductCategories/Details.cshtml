@model ProductCategoryViewModel

@{
    ViewData["Title"] = "Məhsul kateqoriyası haqqında";
}

<h1>Məhsul kateqoriyası haqqında</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mb-2">
            <img width="100" src="~/images/@Model.ProductCategory.Photo">
        </dt>
        <dd class="col-sm-10 mb-2">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.ModifiedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.ModifiedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.AdminManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.AdminManager.Email)
        </dd>
    </dl>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">
                <img width="30" src="~/images/azerbaijan.png" />
            </a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">
                <img width="30" src="~/images/united-states.png" />
            </a>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        @for (int i = Model.ProductCategoryTranslates.Count - 1; i >= 0; i--)
        {
            <div class="tab-pane fade @(i==0?"show active":"")" id="@(i==0?"nav-home":"nav-profile")" role="tabpanel" aria-labelledby="@(i==0?"nav-home-tab":"nav-profile-tab")">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <select hidden asp-for="ProductCategoryTranslates[i].ProductCategoryId" class="form-control" asp-items="ViewBag.SettingId"></select>

                <input hidden asp-for="ProductCategoryTranslates[i].LanguageId" />

                <div class="form-group">
                    <label asp-for="ProductCategoryTranslates[i].Name" class="control-label"></label>
                    <input disabled asp-for="ProductCategoryTranslates[i].Name" class="form-control slug-source" data-validation="required" />
                    <span asp-validation-for="ProductCategoryTranslates[i].Name" class="text-danger"></span>
                </div>
                <input hidden asp-for="ProductCategoryTranslates[i].Id" />
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductCategory.Id" class="btn btn-success">Yenilə</a> |
    <a asp-action="Index" class="btn btn-outline-warning">Geri</a>
</div>
